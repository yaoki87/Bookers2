<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg',fallback: "no_image.jpg" %><br>
<table class="table">
<tbody><tr></tr>
<tr>
<th>name</th>
<th><%= @user.name %></th><br>
</tr>
<tr>
<th>introduction</th>
<th><%= @user.introduction %></th><br>
</tr>
</tbody></table>

<div class="row">
<a><%= link_to " ", edit_user_path(current_user.id), class: ' fas fa-user-cog btn btn-outline-secondary btn-block' %></a>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book, local:true do |f| %>
<div class="form-group">
  <label for="book_title">Title</label><br>
  <%= f.text_field :title, :class => 'form-control book_title' %>
  </div>
<div class="form-group">
  <label for="book_opinion">Opinion</label><br>
  <%= f.text_field :bady, :class => 'form-control book_body' %><br>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', :class => 'btn btn-success' %>
</div>
<% end %>

    </div>
  </div>
</div>
</main>