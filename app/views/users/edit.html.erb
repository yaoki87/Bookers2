<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>

<div class = "error_explanation">
 <% if @user.errors.any? %>
  <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
  <% @user.errors.full_messages.each do |message| %>
   <li> <%= message %></li>
  <% end %>
<% end %>
</div>

<%= form_with model:@user, local:true do |f| %>
<div class="form-group">

  <label for="user_name">Name</label><br>
  <%= f.text_field :name, autofocus: true, :class => 'form-control name'%><br>

   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
   <label for="user_image">Image</label><br>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", :class => 'form-control-file user_image'%><br>

   <label for="user_introduction">Introduction</label><br>
   <%= f.text_field :introduction, autofocus: true, :class => 'form-control introduction' %><br>

   <%= f.submit "Update User", :class => 'btn btn-secondary'%>

</div>

<% end %>

 </div>
</div>
</div>
</main>