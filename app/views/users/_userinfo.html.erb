<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
<tbody><tr></tr>
<tr>
  <th>name</th>
  <th><%= user.name %></th><br>
</tr>

<tr>
  <th>introduction</th>
  <th><%= user.introduction %></th><br>
</tr>

<tr>
  <th>follows</th>
  <th>
    <%= link_to(user_followings_path(user.id)) do %>
    <%= user.followings.count %>
    <% end %>
  </th>
</tr>
<tr>
  <th>followers</th>
  <th>
    <%= link_to(user_followers_path(user.id)) do %>
    <%= user.followers.count %>
    <% end %>
  </th>
</tr>

</tbody>
</table>
<div class="table">
  <% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
  <% end %>
</div>

<div class="row">
<a><%= link_to " ", edit_user_path(user.id), class: ' fas fa-user-cog btn btn-outline-secondary btn-block' %></a>
</div>